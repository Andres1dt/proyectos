
 <%if(session.user){%>
<a href="/quizes/new"><button class="btn btn-success"><span class="glyphicon glyphicon-share-alt"></span> Crear pregunta</button></a>
 <%}%>
<div style="text-align:center;">
<table style="margin: 0 auto; margin-top: 20px;">
  <% var i; for (i=0; i < quizes.length; i++) { %>        
    <tr>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <%if(session.user){%>
      <td><a href="quizes/<%= quizes[i].id %>/edit"><button class="btn btn-info"><span class="glyphicon glyphicon-pencil"></span> Editar</button></a></td>
      <td>
        <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
          <button type="submit" class="btn btn-danger" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
            <span class="glyphicon glyphicon-trash"></span> Borrar
          </button>
        </form>
      </td>
      <%}%>
    </tr> 
  <% } %>
</table>
</div>
<p/>
